{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Docker Image",
            "type": "shell",
            "promptOnClose": true,
            "command": "docker build -t deathcount-training:latest .",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "Run Bash on Docker Image",
            "type": "shell",
            "promptOnClose": true,
            "command": "docker run -it --rm -v ${workspaceFolder}/src/:/source/ deathcount-training:latest",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
        },
    ]
}